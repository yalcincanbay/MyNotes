<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yeni"
    tools:context="com.example.yalcin.MainActivity">

    <Button
        android:id="@+id/buttonProjects"
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:background="?attr/selectableItemBackground"
        android:onClick="btnPROJECTS"
        android:text="My Projects"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonLanguage" />

    <Button
        android:id="@+id/ButtonBooks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="?attr/selectableItemBackground"
        android:onClick="btnBOOKS"
        android:text="My Books"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/ButtonLanguage"
        app:layout_constraintEnd_toEndOf="@+id/ButtonLanguage"
        app:layout_constraintStart_toStartOf="@+id/ButtonLanguage"
        app:layout_constraintTop_toBottomOf="@+id/ButtonFilms" />

    <Button
        android:id="@+id/ButtonFilms"
        android:layout_width="189dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:background="?attr/selectableItemBackground"
        android:onClick="btnFILMS"
        android:text="My Films"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/ButtonBooks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/ButtonLanguage"
        android:layout_width="196dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:background="?attr/selectableItemBackground"
        android:onClick="btnLANGUAGE"
        android:text="Languages"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonProjects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonBooks" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="39dp"
        android:text="MY NOTES "
        android:textSize="48sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/ButtonFilms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>